{
  "name": "talon-template-starter",
  "version": "0.0.1",
  "description": "A minimal Webruntime template",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:public": "cpx \"src/public/**/*\" dist --verbose",
    "build:oasis": "node scripts/copy-oasis.js",
    "build": "yarn clean && yarn build:oasis && yarn build:public",
    "start": "MODE=\"${MODE:-prod}\" webruntime run . --port=$PORT",
    "start:local": "MODE=\"${MODE:-dev}\" webruntime run .",
    "test:unit": "jest",
    "test": "yarn build && yarn test:unit"
  },
  "engines": {
    "node": ">=10.0"
  },
  "dependencies": {
    "@communities-webruntime/cli": "0.44.0",
    "@webruntime/navigation": "0.44.0",
    "lwc": "1.11.0-232.1"
  },
  "devDependencies": {
    "@lwc/jest-preset": "7.0.0",
    "@salesforce/oasis": "0.3.3",
    "colors": "^1.4.0",
    "cpx": "^1.5.0",
    "jest": "25.4.0"
  },
  "jest": {
    "preset": "@lwc/jest-preset",
    "moduleNameMapper": {
      "^(x)/(.+)$": "<rootDir>/src/modules/$1/$2/$2"
    }
  }
}
